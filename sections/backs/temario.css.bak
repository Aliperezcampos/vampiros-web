body {
  background: linear-gradient(to bottom, #000000, #2e003e);
  font-family: 'Crimson Text', serif;
  color: #f5f5f5;
  margin: 0;
  padding: 0;
}

.temario-container {
  max-width: 800px;
  margin: 60px auto;
  padding: 0 20px;
  text-align: center;
}

h1 {
  font-family: 'Cinzel Decorative', serif;
  font-size: 2.5em;
  color: #b30000;
  text-align: center;
  margin-bottom: 40px;
  text-shadow: 2px 2px 8px #000;
}

ul {
  list-style: none;
  padding: 0;
}

li {
  font-size: 1.2em; /* Aumentado desde 1em */
  margin-bottom: 25px;
  padding: 15px;
  background-color: rgba(40, 0, 40, 0.3);
  border-left: 4px solid #b30000;
  box-shadow: 0 0 10px rgba(90, 0, 0, 0.5);
  transition: background 0.3s ease;
}

a.tema-link {
  font-size: 1.2em;
  color: #f5f5f5;
  text-decoration: none;
  padding: 10px 20px;
  display: inline-block;
  background-color: rgba(40, 0, 40, 0.4);
  border-left: 4px solid #b30000;
  box-shadow: 0 0 10px rgba(90, 0, 0, 0.5);
  transition: background 0.3s ease, transform 0.3s ease;
}

a.tema-link:hover {
  background-color: rgba(90, 0, 0, 0.5);
  transform: scale(1.02);
}

li:hover {
  background-color: rgba(90, 0, 0, 0.4);
}

@media (max-width: 600px) {
  h1 {
    font-size: 1.8em;
  }

  li {
    font-size: 1.05em; /* También más grande en móviles */
    padding: 10px;
  }
}

.temario-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 1rem;
}

.tema-boton {
  display: block;
  width: 90%;
  max-width: 500px;
  margin: 1rem 0;
  padding: 1rem 2rem;
  background: radial-gradient(circle at top left, #2c0f1e, #1a0a13);
  color: #f8f0f5;
  font-family: 'Cinzel Decorative', serif;
  font-size: 1.2rem;
  text-decoration: none;
  border: 2px solid #6e1a3a;
  border-radius: 12px;
  box-shadow: 0 0 20px #6e1a3a;
  opacity: 0;
  transform: translateY(30px) scale(0.95);
  animation: entradaGotica 1s ease-out forwards;
  animation-delay: var(--delay, 0s);
  filter: url(#blood-drip);
  transition: filter 0.5s ease;
}

/* Animación gótica */
@keyframes entradaGotica {
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* Asignar delay progresivo para efecto escalonado */
.tema-boton:nth-child(1) { --delay: 0.1s; }
.tema-boton:nth-child(2) { --delay: 0.2s; }
.tema-boton:nth-child(3) { --delay: 0.3s; }
.tema-boton:nth-child(4) { --delay: 0.4s; }
.tema-boton:nth-child(5) { --delay: 0.5s; }
.tema-boton:nth-child(6) { --delay: 0.6s; }
.tema-boton:nth-child(7) { --delay: 0.7s; }
.tema-boton:nth-child(8) { --delay: 0.8s; }

.sangre-wrapper {
  display: inline-block;
  filter: url(#blood-drip);
}

